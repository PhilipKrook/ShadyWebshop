@model LIAuppgift.Models.ViewModels.CartPageViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Static/css/Style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <h1 class="h1-cart">Shopping Cart</h1>
    <table id="products">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price (single)</th>
            <th>Price (sum)</th>
            <th class="remove-heading">
                <div>Remove item</div>
                <div><button type="submit" Class="button-remove">X</button></div>
            </th>
        </tr>
        @foreach (var cartItem in Model.CartItems)
        {
    <tr>
        <td>@cartItem.Name</td>
        <td>
            <form>
                <input type="number" id="" name="" value="@cartItem.Quantity">
            </form>
        </td>
        <td>@cartItem.Price</td>
        <td>@cartItem.SumPrice</td>
        <td>
            <form method="post" action="">
                <input type="checkbox" value="" name=""/>
            </form>
        </td>
    </tr>
        }
    </table>
</body>
</html>