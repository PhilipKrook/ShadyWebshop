@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using LIAuppgift.Business.Api

@model LIAuppgift.Models.Pages.ProductPage
@model LIAuppgift.Models.ViewModels.ProductPageViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Static/css/Style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="product-overview">
        <div class="product-id">
            <h1>@Html.PropertyFor(m => Model.CurrentPage.Heading)</h1>
            <p>Article number: @Html.PropertyFor(m => Model.CurrentPage.ArticleNumber)</p>
        </div>
        <div class="product-column">
            <div @Html.EditAttributes(x => Model.CurrentPage.ProductImage)>
                <img class="product-image" src="@Url.ContentUrl(Model.CurrentPage.ProductImage)" />
            </div>
            <div class="product-price">
                Price: (USD)  @Html.PropertyFor(m => Model.ConvertedPrice)
                <form method="post" action="@Url.ContentUrl(Model.CurrentPage.ContentLink)">
                    <input type="hidden" value="@Model.CurrentPage.ContentLink.ID" name="productId" />
                    <button type="submit" Class="button-buy">Buy</button>
                </form>
            </div>
        </div>
    </div>
    <div class="product-info">
        <strong>Product description</strong>
        <p>@Html.PropertyFor(m => Model.CurrentPage.MainBody)</p>
    </div>

</body>
</html>