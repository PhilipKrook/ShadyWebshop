@using EPiServer.Web.Mvc.Html

@model LIAuppgift.Models.ViewModels.ProductListingPageViewModel

<div class="bg-gray-50">
    <div class="mx-auto py-12 px-4 max-w-7xl sm:px-6 lg:px-8">
        <div class="space-y-12">
            <div class="lg:text-center flex flex-col rounded-lg shadow-lg bg-white overflow-hidden p-8">
                <h2 class="text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">Behold, the products</h2>
                <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">Listing the current stock of products. Images, text, price etc etc may and probably aint accurate </p>
            </div>
            <ul class="space-y-4 sm:grid sm:grid-cols-2 sm:gap-6 sm:space-y-0 lg:grid-cols-3 lg:gap-8">

                @foreach (var product in Model.Products)
                {
                    @Html.EditAttributes(x => product.ProductImage)
                    <li class="py-10 px-6 bg-white text-center shadow-lg rounded-lg xl:px-10 xl:text-left">
                        <div class="space-y-6 xl:space-y-10 h-full xl:flex xl:flex-col xl:justify-between">
                                <img class="mx-auto rounded-lg w-max" src="@Url.ContentUrl(product.ProductImage)">
                            <div class="space-y-2 xl:flex xl:justify-center">
                                <h3 class="text-indigo-400 font-medium text-lg leading-6 space-y-1"><a href="@Url.ContentUrl(product.ContentLink)">@product.Heading</a></h3>
                            </div>
                        </div>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>